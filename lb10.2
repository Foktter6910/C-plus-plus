#include <iostream>
using namespace std;

int main() {
    const int m = 6, n = 4;
    int a[m][n];
    int i, j;

    cout << "Enter a 6x4 array:\n";
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            cin >> a[i][j];
        }
    }

    for (j = 0; j < n; j++) {
        int k = 0;
        for (i = 0; i < m; i++) {
            if (a[i][j] % 2 == 0) k++;
        }
        cout << "Column " << j << ": " << k << " even numbers\n";
    }

    return 0;
}
