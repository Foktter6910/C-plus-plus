#include <iostream>
using namespace std;

int main() {
    long long c0;
    int steps = 0;
    cin >> c0;

    while (c0 != 1) {
        cout << c0 << " ";
        if (c0 % 2 == 0) {
            c0 /= 2;
        } else {
            c0 = 3 * c0 + 1;
        }
        steps++;
    }
    cout << c0 << endl;       // Вивести 1 у кінці
    cout << "steps = " << steps << endl;
    return 0;
}
