#include <iostream>
using namespace std;

struct Time {
    int hours;
    int minutes;
};

int main() {
    Time t;
    int addMin;

    cout << "Enter hours: ";
    cin >> t.hours;
    cout << "Enter minutes: ";
    cin >> t.minutes;
    cout << "Enter minutes to add: ";
    cin >> addMin;

    if (t.hours < 0 || t.hours > 23 || t.minutes < 0 || t.minutes > 59) {
        cout << "Invalid input time\n";
        return 0;
    }

    int totalMin = t.hours * 60 + t.minutes + addMin;
    totalMin %= 24 * 60;  

    Time result;
    result.hours = totalMin / 60;
    result.minutes = totalMin % 60;

    cout << result.hours << ":" 
         << (result.minutes < 10 ? "0" : "") << result.minutes << endl;

    return 0;
}
