#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the array size: ";
    cin >> n;

    int *a = new int[n];
    int i;

    cout << "Enter " << n << " different numbers:\n";
    for (i = 0; i < n; i++) {
        cin >> a[i];
    }

    int imin = 0, imax = 0;
    for (i = 1; i < n; i++) {
        if (a[i] < a[imin]) imin = i;
        if (a[i] > a[imax]) imax = i;
    }

    int tmp = a[imin];
    a[imin] = a[imax];
    a[imax] = tmp;

    cout << "Array after changing min and max:\n";
    for (i = 0; i < n; i++) {
        cout << a[i] << " ";
    }
    cout << endl;

    delete[] a;
    return 0;
}

