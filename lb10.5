#include <iostream>
using namespace std;

int main() {
    const int m = 3, n = 4;
    int a[m][n];
    int i, j;

    cout << "Enter a 3x4 array:\n";
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            cin >> a[i][j];
        }
    }

    int maxVal = a[0][0];
    int imax = 0, jmax = 0;

    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            if (a[i][j] > maxVal) {
                maxVal = a[i][j];
                imax = i;
                jmax = j;
            }
        }
    }

    cout << "Maximum element: " << maxVal << endl;
    cout << "Its position: row " << imax << ", column " << jmax << endl;

    return 0;
}
