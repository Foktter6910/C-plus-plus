#include <iostream>
using namespace std;

int main() {
    const int m = 4, n = 7;
    int a[m][n];
    int i, j;

    cout << "Enter a 4x7 array:\n";
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            cin >> a[i][j];
        }
    }

    int minVal = a[0][0];
    int imin = 0, jmin = 0;

    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            if (a[i][j] < minVal) {
                minVal = a[i][j];
                imin = i;
                jmin = j;
            }
        }
    }

    cout << "Minimum element: " << minVal << endl;
    cout << "Its position: row " << imin << ", column " << jmin << endl;

    return 0;
}
