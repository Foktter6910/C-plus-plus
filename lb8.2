#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the array size n: ";
    cin >> n;

    int *a = new int[n];
    int i;

    cout << "Press " << n << " whole numbers:\n";
    for (i = 0; i < n; i++) {
        cin >> a[i];
    }

    int maxVal = a[0];
    for (i = 1; i < n; i++) {
        if (a[i] > maxVal) {
            maxVal = a[i];
        }
    }
 
    int maxPos = 0;
    while (maxPos < n && a[maxPos] != maxVal) {
        maxPos++;
    }

    for (i = 0; i < maxPos; i++) {
        if (a[i] < 0) {
            a[i] = 0;
        }
    }

    cout << "Result:\n";
    for (i = 0; i < n; i++) {
        cout << a[i] << " ";
    }
    cout << endl;

    delete[] a;
    return 0;
}
