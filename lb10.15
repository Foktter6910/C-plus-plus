#include <iostream>
using namespace std;

int main() {
    const int n = 3;
    int a[n][n];
    int i, j;

    cout << "Enter a 3x3 array:\n";
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            cin >> a[i][j];
        }
    }

    int sumMain = 0;
    int sumSide = 0;

    for (i = 0; i < n; i++) {
        sumMain += a[i][i];           // main diagonal
        sumSide += a[i][n - 1 - i];   // side diagonal
    }

    cout << "Main diagonal sum: " << sumMain << endl;
    cout << "Side diagonal sum: " << sumSide << endl;

    return 0;
}
