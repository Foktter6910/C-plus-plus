#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the array size: ";
    cin >> n;

    int *a = new int[n];
    int i;

    cout << "Enter " << n << " different numbers:\n";
    for (i = 0; i < n; i++) {
        cin >> a[i];
    }

    int max1 = a[0];
    int max2 = a[0];

    for (i = 1; i < n; i++) {
        if (a[i] > max1) {
            max1 = a[i];
        }
    }

    bool firstFound = false;
    for (i = 0; i < n; i++) {
        if (a[i] != max1) {
            if (!firstFound) {
                max2 = a[i];
                firstFound = true;
            } else {
                if (a[i] > max2 && a[i] != max1) {
                    max2 = a[i];
                }
            }
        }
    }

    cout << "Second largest element: " << max2 << endl;

    delete[] a;
    return 0;
}


